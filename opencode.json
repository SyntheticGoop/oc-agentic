{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "instructions": [
    "AGENTS.md",
    "README.md",
    "workflow/README.md",
    "planner/README.md"
  ],
  "mcp": {
    "flow": {
      "type": "local",
      "command": ["yarn", "run:mcp:workflow", "--workflow=workflow/task.flow"],
      "enabled": true
    },
    "planner": {
      "type": "local",
      "command": ["yarn", "run:mcp:planner"],
      "enabled": true
    }
  }
}
